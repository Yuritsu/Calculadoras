	/**
	 * Create the frame.
	 */
	public CalculadoraBase() {
		setForeground(Color.RED);
		setBackground(Color.GREEN);
		setTitle("Calculadora");
		setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
		setBounds(100, 100, 289, 479);
